                    span.title 통행객
                    .ib-card-actions
                        .download
                            i.material-icons cloud_download
                            span 이미지 다운로드
                        .bottom-toggler-btn2.toggler(data-blind="true" data-opened="true" data-target="#body3")
                            span 접기
                            i.material-icons arrow_drop_up
                .ib-card-body#body3
                    .chart-wrapper
                        canvas#chart1
                hr.ib-card-hr
                .ib-card-header
