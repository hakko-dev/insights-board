                hr.ib-card-hr
                .ib-card-header
                    span.title 체류율
                    .ib-card-actions
                        .download
                            i.material-icons cloud_download
                            span 이미지 다운로드
                        .bottom-toggler-btn2.toggler(data-blind="true" data-opened="true" data-target="#body7")
                            span 접기
                            i.material-icons arrow_drop_up
                .ib-card-body#body7
                    .chart-wrapper
                        canvas#chart5
                hr.ib-card-hr
                .ib-card-header
                    span.title 체류시간
